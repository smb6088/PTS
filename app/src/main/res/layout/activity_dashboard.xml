<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373F52"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reviewatutor"
        android:layout_width="326dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="148dp"
        android:layout_weight="1"
        android:height="60dp"
        android:background="#55a4b1"
        android:drawableLeft="@drawable/reviewicon"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:text="Review"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        app:backgroundTint="#55a4b1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/categories"
        app:layout_constraintStart_toStartOf="@+id/categories"
        app:layout_constraintTop_toBottomOf="@+id/categories"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/categories"
        android:layout_width="326dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:height="60dp"
        android:background="#55a4b1"
        android:drawableLeft="@drawable/categoriesicon"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:text="Tutoring Categories"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        app:backgroundTint="#55a4b1"
        app:layout_constraintEnd_toEndOf="@+id/becomeatutor"
        app:layout_constraintStart_toStartOf="@+id/becomeatutor"
        app:layout_constraintTop_toBottomOf="@+id/becomeatutor" />

    <Button
        android:id="@+id/becomeatutor"
        android:layout_width="326dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:height="60dp"
        android:background="#55a4b1"
        android:drawableLeft="@drawable/becomeicon"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:text="Become A Tutor"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        app:backgroundTint="#55a4b1"
        app:layout_constraintEnd_toEndOf="@+id/hireatutor"
        app:layout_constraintStart_toStartOf="@+id/hireatutor"
        app:layout_constraintTop_toBottomOf="@+id/hireatutor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:text="Hello,"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/signout"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:backgroundTint="#55a4b1"
        android:text="sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/hireatutor"
        android:layout_width="326dp"
        android:layout_height="100dp"
        android:layout_marginTop="136dp"
        android:layout_weight="1"
        android:height="60dp"
        android:background="#55a4b1"
        android:drawableLeft="@drawable/hireicon"
        android:drawablePadding="6dp"
        android:padding="6dp"
        android:text="Hire A Tutor"
        android:textColor="#0D47A1"
        android:textStyle="bold"
        app:backgroundTint="#55a4b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profilebtn"
        android:layout_width="99dp"
        android:layout_height="86dp"
        android:contentDescription="profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/nameicon" />

</androidx.constraintlayout.widget.ConstraintLayout>